windowDef Desktop {
    rect        0, 0, 640, 480
    backcolor   0, 0, 0, 0
    visible     1
    nocursor    0
    scaleToRenderWindow 1

    onTab
    {
        set "cmd" "close"
    }

    windowDef Inventory {
        rect        100, 100, 600, 800
        backcolor   .29, 0.29, 0.28, .8
        bordercolor 0.5, 0.6, 0.6, 1
        bordersize  1
        text        "Inventory"
        textalign   3
        shadow      2
        scaleToRenderWindow 1

        windowDef Icon1 {
            rect 2, 45, 128, 128
            //backcolor   .29, 0.29, 0.28, .8
            background "guis/simplekey"

            bordercolor 0.5, 0.6, 0.6, 1
            bordersize  1
            text        "Icon1"
            scaleToRenderWindow 1

            onMouseEnter
            {
                set "Icon1::text" "Yo dawg" ;
                localSound "sound/gui/btn_roll_over" ;
            }

            onMouseExit
            {
                set "Icon1::text" "No dawg" ;
            } 

            onAction
            {
                set "cmd" "give weapon_tazer" ;
                set "Icon1::text" "You pressed me" ;
                localSound "sound/gui/btn_pda_advance" ;
            }
        }

        windowDef Icon2 {
            rect 2 + 128 + 2, 45, 128, 128
            backcolor   .29, 0.29, 0.28, .8
            bordercolor 0.5, 0.6, 0.6, 1
            bordersize  1
            text        "Icon2"
            scaleToRenderWindow 1

            onMouseEnter
            {
                set "text" "Yo dawg" ;
                localSound "sound/gui/btn_roll_over" ;
            }

            onMouseExit
            {
                set "text" "No dawg" ;
            } 

            onAction
            {
                set "cmd" "give weapon_tazer" ;
                set "text" "You pressed me" ;
                localSound "sound/gui/btn_pda_advance" ;
            }
        }
    }

